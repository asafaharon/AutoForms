# AutoForms Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_ENV=production
DEBUG=false
BASE_URL=https://your-domain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# IMPORTANT: Generate a strong, unique JWT secret for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=your-super-secure-jwt-secret-here-make-it-long-and-random-64-characters-minimum

# Admin email addresses (comma-separated)
ADMIN_EMAILS=admin@yourdomain.com,your-email@example.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?options
MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp
DATABASE_NAME=autoforms

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
# Gmail SMTP settings (or use your preferred email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=your-email@gmail.com

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL - FOR CACHING)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true

# Cache TTL settings (in seconds)
CACHE_TTL_FORM_GENERATION=1800  # 30 minutes
CACHE_TTL_USER_SESSION=86400    # 24 hours  
CACHE_TTL_API_RESPONSE=600      # 10 minutes

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS
# =============================================================================
# Server configuration
HOST=0.0.0.0
PORT=8000

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=  # Optional: Add Sentry DSN for error tracking

# =============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# =============================================================================
# Uncomment based on your cloud provider:

# For Railway:
# RAILWAY_STATIC_URL=
# RAILWAY_PUBLIC_DOMAIN=

# For Render:
# RENDER_EXTERNAL_URL=

# For Heroku:
# HEROKU_APP_NAME=
# HEROKU_RELEASE_VERSION=

# For Vercel:
# VERCEL_URL=
# VERCEL_ENV=

# =============================================================================
# DEVELOPMENT SETTINGS (Remove in production)
# =============================================================================
# UVICORN_RELOAD=false
# UVICORN_LOG_LEVEL=info